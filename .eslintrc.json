{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": ["api/**/*.js"],
      "env": {
        "node": true,
        "browser": false,
        "es2021": true
      },
      "rules": {}
    }
  ],
  "rules": {}
}
